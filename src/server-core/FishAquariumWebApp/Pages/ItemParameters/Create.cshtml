@page
@using FishAquariumWebApp.Enums
@model FishAquariumWebApp.Pages.ItemParameters.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Parameters</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ItemParameter.Name" class="control-label"></label>
                <input asp-for="ItemParameter.Name" class="form-control" />
                <span asp-validation-for="ItemParameter.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemParameter.Value" class="control-label"></label>
                <input asp-for="ItemParameter.Value" class="form-control" />
                <span asp-validation-for="ItemParameter.Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemParameter.Type" class="control-label"></label>
                <select asp-for="ItemParameter.Type" asp-items="Html.GetEnumSelectList<ParameterTypes>()"></select>
                <span asp-validation-for="ItemParameter.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemParameter.Id" class="control-label"></label>
                <input asp-for="ItemParameter.Id" class="form-control" />
                <span asp-validation-for="ItemParameter.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Fish </label>
                <select asp-for="ItemParameter.FkFish" asp-items="Model.Fishes"></select>
                <span asp-validation-for="ItemParameter.FkFish" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Aquarium </label>
                <select asp-for="ItemParameter.FkAquarium" asp-items="Model.Aquariums"></select>
                <span asp-validation-for="ItemParameter.FkAquarium" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
