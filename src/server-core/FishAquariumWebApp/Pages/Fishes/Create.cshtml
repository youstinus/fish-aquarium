            </div>
            <div class="form-group">
                <label asp-for="Fish.Mass" class="control-label"></label>
                <input asp-for="Fish.Mass" class="form-control" />
                <span asp-validation-for="Fish.Mass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fish.Size" class="control-label"></label>
                <input asp-for="Fish.Size" class="form-control" />
                <span asp-validation-for="Fish.Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fish.Origin" class="control-label"></label>
                <input asp-for="Fish.Origin" class="form-control" />
