            </div>
            <div class="form-group">
                <label asp-for="Fish.ArrivalDate" class="control-label"></label>
                <input asp-for="Fish.ArrivalDate" class="form-control" />
                <span asp-validation-for="Fish.ArrivalDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fish.LifeExpectancy" class="control-label"></label>
                <input asp-for="Fish.LifeExpectancy" class="form-control" />
                <span asp-validation-for="Fish.LifeExpectancy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fish.Description" class="control-label"></label>
                <input asp-for="Fish.Description" class="form-control" />
                <span asp-validation-for="Fish.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fish.Gender" class="control-label"></label>
                <select asp-for="Fish.Gender" asp-items="Html.GetEnumSelectList<FishGenderTypes>()"></select>
                <span asp-validation-for="Fish.Gender" class="text-danger"></span>
            </div>
