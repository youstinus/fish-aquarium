@page
@model FishAquariumWebApp.Pages.Foods.IndexModel

@{
    ViewData["Title"] = "Food";
}

<h2>Food</h2>

@if (Model.IsUserOrAdmin())
{
    <p>
        <a asp-page="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Foods[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foods[0].Mass)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foods[0].Calories)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foods[0].Carbs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foods[0].Proten)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foods[0].Fat)
            </th>
            <th>
                Manual
            </th>
            <th>
                Expiration Date
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foods[0].Allergen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Foods) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mass) g
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Calories) kcal
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Carbs) g
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Proten) g
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fat) g
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrepManual)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpirationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Allergen)
            </td>
            <td>
                @*<a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |*@
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                @if (Model.IsUserOrAdmin())
                {
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
